<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
      http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    
    <navigation-rule>
        <display-name>Home</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/home.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    	<display-name>Login</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
        	<from-outcome>login</from-outcome>
        	<to-view-id>/login.xhtml</to-view-id>
        	<redirect />
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    	<display-name>Users</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
        	<from-outcome>users</from-outcome>
        	<to-view-id>/users.xhtml</to-view-id>
        	<redirect />
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    	<display-name>Activities</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
        	<from-outcome>activities</from-outcome>
        	<to-view-id>/activities.xhtml</to-view-id>
        	<redirect />
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    	<display-name>Edit</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
        	<from-outcome>profile</from-outcome>
        	<to-view-id>/profile.xhtml</to-view-id>
        	<redirect />
        </navigation-case>
        <navigation-case>
        	<from-outcome>editActivity</from-outcome>
        	<to-view-id>/editActivity.xhtml</to-view-id>
        	<redirect />
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    	<display-name>Show</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
        	<from-outcome>showUser</from-outcome>
        	<to-view-id>/showUser.xhtml</to-view-id>
        	<redirect />
        </navigation-case>
        <navigation-case>
        	<from-outcome>showActivity</from-outcome>
        	<to-view-id>/showActivity.xhtml</to-view-id>
        	<redirect />
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    	<display-name>Inscription</display-name>
        <from-view-id>*</from-view-id>
        <navigation-case>
        	<from-outcome>inscription</from-outcome>
        	<to-view-id>/inscription.xhtml</to-view-id>
        	<redirect />
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    	<display-name>Create_User</display-name>
        <from-view-id>/profile.xhtml</from-view-id>
        <navigation-case>
        	<from-outcome>createUser</from-outcome>
        	<to-view-id>/createUser.xhtml</to-view-id>
        	<redirect />
        </navigation-case>
    </navigation-rule>

</faces-config>